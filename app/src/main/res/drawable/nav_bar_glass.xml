<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Semi-transparent white for glass look -->
    <solid android:color="#33FFFFFF"/>

    <!-- Curved corners for floating effect -->
    <corners android:radius="32dp"/>

    <!-- Slight inner padding to look softer -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp"/>

    <!-- Fake inner shadow for depth -->
    <stroke android:width="1dp" android:color="#55FFFFFF"/>

</shape>
