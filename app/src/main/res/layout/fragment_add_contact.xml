<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <TextView
        android:id="@+id/addContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD CONTACTS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contactCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/addContactTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#3A1A6F">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- NAME LABEL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME:"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>

            <!-- NAME INPUT -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:hint="Full Name"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#7A7A7A"/>
            </com.google.android.material.textfield.TextInputLayout>



            <!-- NUMBER LABEL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:text="CONTACT NUMBER:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactNumberField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:hint="09XX XXX XXXX"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#7A7A7A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- EMAIL LABEL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL:"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactEmailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:hint="email@example.com"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#7A7A7A"/>


                <!-- SPACER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- PICK CONTACT BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickContact"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="PICK FROM CONTACTS"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#6A1B9A"
                    app:cornerRadius="12dp"
                    android:elevation="4dp" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SAVE BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveContact"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="SAVE CONTACT"
        android:textColor="@android:color/white"
        app:backgroundTint="#4CAF50"
        android:layout_marginTop="24dp"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/contactCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
